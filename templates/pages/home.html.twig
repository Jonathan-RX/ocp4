{% extends 'base.html.twig' %}

{% block title 'Musée du Louvre, billetterie' %}

{% block body %}

    <div class="row">

        <div class="col-lg-3">
            <h1 class="my-3 h2 font-weight-light">Musée du Louvre</h1>
            <div class="list-group">
                <a href="#" class="list-group-item active">Billets journée</a>
                <a href="#" class="list-group-item">Billets demi-journée</a>
            </div>
        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9 pb-4">

            <div class="card mt-4">
                <img class="card-img-top img-fluid" src="https://cdn-imgix.headout.com/tour/5980/TOUR-IMAGE/1dd96726-9311-41f5-ac66-c729a8761275-3909-paris-louvre-museum-priority-access-with-flexible-entry-time-01.jpg?auto=compress&fm=pjpg&w=900&h=400&crop=faces&fit=min" alt="">
                <div class="card-body">
    <h3 class="card-title">Billet journée</h3>
    <p class="card-text">
        {{ form_start(form) }}
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </p>
                </div>
            </div>

        </div>
        <!-- /.col-lg-9 -->

    </div>
{% endblock %}