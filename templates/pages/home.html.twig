{% extends 'base.html.twig' %}

{% block title 'Mus√©e du Louvre, billetterie' %}

{% block body %}


    {{ form_start(form) }}
    <div class="row bg-white">
        <div class="col-sm nopadding">
            <div class="card p-2 pl-3">{{ form_row(form.date_visit) }}</div>
        </div>
        <div class="col-sm nopadding">
            <div class="card p-2 pl-3">{{ form_row(form.nbr_tickets) }}</div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm nopadding">
            <div class="card p-2 pl-3">{{ form_row(form.duration) }}</div>
        </div>
        <div class="col-sm nopadding">
            <div class="card p-2 pl-3">{{ form_row(form.mail) }}</div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="card pl-4">
                {{ form_row(form.valider, { 'label': 'Valider' }) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}


{% endblock %}

{% block javascripts %}
    <script src="https://unpkg.com/bootstrap-datepicker@1.9.0/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="https://unpkg.com/bootstrap-datepicker@1.9.0/dist/locales/bootstrap-datepicker.en-GB.min.js" charset="UTF-8"></script>
    <script src="https://unpkg.com/bootstrap-datepicker@1.9.0/dist/locales/bootstrap-datepicker.fr.min.js" charset="UTF-8"></script>

    <script>
        $(document).ready(function() {
            $('.js-datepicker').datepicker({
                format: 'yyyy-mm-dd',
                startDate: '0d',
                language: 'fr-FR',
                datesDisabled: ['xxxx-05-01', 'xxxx-11-01', 'xxxx-12-25'],
                daysOfWeekDisabled: [0]
            });
        });
    </script>
{% endblock %}

{% block stylesheets  %}
    <link id="bsdp-css" href="https://unpkg.com/bootstrap-datepicker@1.9.0/dist/css/bootstrap-datepicker3.min.css" rel="stylesheet">
{% endblock %}